{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es2015",
    "paths": {
      "@guards/*": ["app/guards/*"],
      "@dialogs/*": ["app/dialogs/*"],
      "@interfaces/*": ["app/interfaces/*"],
      "@shared/*": ["app/shared/*"],
      "@services/*": ["app/services/*"],
      "@environments/*": ["environments/*"],
      "@pages/*": ["app/pages/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"]
  }
}
